modules = ["nodejs-20", "web", "python-3.11"]

[nix]
channel = "stable-25_05"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "gunicorn app:app --host 0.0.0.0 --port 5000"]

[workflows]
runButton = "Production"

[[workflows.workflow]]
name = "Production"
author = 46439179
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn app:app --host 0.0.0.0 --port 5000"
